<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WpfInfoTerminal">
    <!-- Light grey -->
    <Color x:Key="Light">#e4ecf2</Color>
    <SolidColorBrush x:Key="LightBrush" Color="{StaticResource Light}" />

    <!-- Hover grey -->
    <Color x:Key="Hover">#b9ccda</Color>
    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource Hover}" />

    <!-- Dark Text -->
    <Color x:Key="DarkText">#3c3c3c</Color>
    <SolidColorBrush x:Key="DarkTextBrush" Color="{StaticResource DarkText}" />

    <!-- White -->
    <Color x:Key="VeryLight">#ffffff</Color>
    <SolidColorBrush x:Key="VeryLightBrush" Color="{StaticResource VeryLight}" />

    <!-- Dark grey -->
    <Color x:Key="Dark">#5b7f9a</Color>
    <SolidColorBrush x:Key="DarkBrush" Color="{StaticResource Dark}" />

    <!-- Black -->
    <Color x:Key="VeryDark">#000000</Color>
    <SolidColorBrush x:Key="VeryDarkBrush" Color="{StaticResource VeryDark}" />

    <!-- Red -->
    <Color x:Key="WineRed">#651919</Color>
    <SolidColorBrush x:Key="WineRedBrush" Color="{StaticResource WineRed}" />

    <!-- Green -->
    <Color x:Key="Green">#4C884D</Color>
    <SolidColorBrush x:Key="GreenBrush" Color="{StaticResource Green}" />
    
</ResourceDictionary>